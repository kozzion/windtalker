<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_chat_text_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender"/>

    <TextView
        android:id="@+id/item_chat_text_chat_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"/>

    <TextView
        android:id="@+id/item_chat_text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"/>

    <TextView
        android:id="@+id/item_chat_text_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"/>
</LinearLayout>